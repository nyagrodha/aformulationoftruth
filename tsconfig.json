{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022"],
    
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    
    
    "rootDir": "./src",
    "outDir": "dist",
 
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true, 

    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false,
    "types": ["node"]
    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "tests", "scripts"]
}
