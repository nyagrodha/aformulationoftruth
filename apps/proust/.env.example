# Proust Questionnaire - Gupta Vidyā Configuration
# गुप्त-विद्या पर्यावरण-चरः

# Server Configuration
PROUST_PORT=5743
NODE_ENV=production

# Encryption Configuration - Gupta Vidyā Settings
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_LENGTH=256
TOKEN_EXPIRY_MINUTES=5
MAX_AUTH_ATTEMPTS=3

# Database Configuration (PostgreSQL)
# If using the main database, inherit from parent .env
DATABASE_URL=postgresql://username:password@localhost:5432/karuppacami

# Session Configuration
SESSION_SECRET=your-secret-here-change-in-production
SESSION_MAX_AGE=3600000

# CORS Settings
ALLOWED_ORIGINS=https://proust.aformulationoftruth.com,https://aformulationoftruth.com

# Iceland Server Configuration
ICELAND_SERVER_URL=https://gimbal.fobdongle.is

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/proust/access.log

# Sanskrit Blessings Configuration
ENABLE_SANSKRIT_BLESSINGS=true
